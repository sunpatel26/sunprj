@using Microsoft.AspNetCore.Identity
@using Business.SQL
@using GridCore
@addTagHelper *, GridMvc
@model ISGrid
@{
    ViewData["Title"] = "Feedback List..";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
    <div class="card border-1 shadow rounded-7 p-1">
        <div class="row border-bottom">

            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="page-breadcrumb align-items-center">
                    <div class="p-2">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Feedback" asp-action="Index" asp-area="Marketing"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Feedback</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-6 text-end">
                @*Test By Dravesh*@
                <a class="btn btn-primary px-5" onclick="fnMasterEntity2(this)"
                   href="javascript:void(0)"
                   data-key="0"
                   data-bs-toggle="offcanvas"
                   data-bs-target="#canvas_masterentity2"
                   aria-controls="canvas_masterentity">
                    Add New
                </a>
                @*Test By Dravesh*@
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <grid model="@Model" />
            </div>
        </div>

        <!--Test By Dravesh-->
        <div class="offcanvas offcanvas-end" tabindex="-1" id="canvas_masterentity2">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="canvasHeader"></h5>
                <button type="button" class="btn-close te  xt-reset" data-bs-dismiss="offcanvas" aria-l abel="Close"></button>
            </div>
            <div class="offcanvas-body pt-3 pb-5">
                <div id="dvInfo2">
                </div>
            </div>
        </div>
        <!--Test By Dravesh-->

    </div>
</div>
<script type="text/javascript">
    @*Test By Dravesh*@
        var urladd = '@Url.Action("Get", "Feedback")';
    function fnMasterEntity2(obj) {
        var _key = $(obj).data('key');
        var _id = $(obj).data('id');
        if (_id > 0)
            document.getElementById("canvasHeader").innerHTML = "Update FeedBack";
        else
            document.getElementById("canvasHeader").innerHTML = "Add FeedBack";
        var _parameters = { id: _id, key: _key };
        $.ajax({
            url: urladd,
            type: "POST",
            data: _parameters,
            success: function(data, textStatus, jqXHR) {
                $('#dvInfo2').html(data);
                $("#canvas_masterentity2").show();//('hide');
            }
        });
    }
    @*Test By Dravesh*@
</script>
<script src="~/js/gridmvc.js" type="text/javascript"></script>