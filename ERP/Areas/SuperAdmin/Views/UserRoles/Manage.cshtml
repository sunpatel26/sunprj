@model List<ManageUserRolesViewModel>
@{ ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml"; }
<div class="page-breadcrumb d-none d-sm-flex align-items-center pb-2 border-bottom">
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" asp-area="SuperAdmin"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"><a asp-controller="UserRoles" asp-action="Index" asp-area="SuperAdmin">Manage Users</a></li>
                <li class="breadcrumb-item active" aria-current="page">User</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <form method="post">
        <div class="card">
            <div class="card-header">
                
                Add/Remove Roles for User / @ViewBag.UserName.
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
    <div class="form-check m-1">
        <input type="hidden" asp-for="@Model[i].RoleId" />
        <input type="hidden" asp-for="@Model[i].RoleName" />
        <input asp-for="@Model[i].Selected" class="form-check-input" />
        <label class="form-check-label" asp-for="@Model[i].Selected">
            @Model[i].RoleName
        </label>
    </div>  }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary"
                       style="width:auto" />
                <a asp-action="Index" asp-controller="UserRoles"
                   class="btn btn-primary" style="width:auto">Cancel</a>
            </div>
        </div>
    </form>
</div>