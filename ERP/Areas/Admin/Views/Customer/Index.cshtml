@using Microsoft.AspNetCore.Identity
@using Business.SQL
@using GridCore
@addTagHelper *, GridMvc
@model ISGrid
@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    ViewBag.Title = "Customer List..";
}
<div class="page-breadcrumb d-none d-sm-flex align-items-center pb-3 border-bottom">
    <div class="ps-3 col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a asp-controller="Customer" asp-action="Index" asp-area="Admin"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Customer List</li>
            </ol>
        </nav>
    </div>
    <div class="col-md-6 text-align-right">
        <a class="btn btn-primary px-5" asp-controller="Customer" asp-action="AddUpdateCustomer" asp-area="Admin">
            Add Customer
        </a>
    </div>
</div>
<div class="row pt-1">
    <div class="col-md-12">
        <grid model="@Model" />
    </div>
</div>
