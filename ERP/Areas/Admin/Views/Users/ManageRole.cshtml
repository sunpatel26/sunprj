@model UserRolesMetadata
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml"; }

<div class="page-breadcrumb d-none d-sm-flex align-items-center pb-3 border-bottom">
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" asp-area="Admin"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"><a asp-controller="Users" asp-action="Index" asp-area="Admin">Users</a></li>
                <li class="breadcrumb-item active" aria-current="page">Manage User Role</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <form method="post" asp-action="UpdateRole" asp-controller="Users" asp-area="Admin" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
        <hr />
        <input type="hidden" asp-for="UserID" />
        <div class="form-group row">
            <div class="col-md-9">
                <ul id="tree">
                    @{
                        for (int i = 0; i < Model.SelectedRole.Count(); i++)
                        {
                            string name = Model.SelectedRole[i].Name;
                            <li data-value="@name">
                                <input asp-for="@Model.SelectedRole[i].IsSelectedRole" class="form-check-input" />&nbsp;@name
                                <input asp-for="@Model.SelectedRole[i].RoleID" type="hidden" />
                                <input asp-for="@Model.SelectedRole[i].Name" type="hidden" />
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
        <div class="col-sm-12" style="padding: 20px 20px 0px 0px">
            <button type="submit" class="btn btn-primary btn-info px-5">Submit</button>
        </div>
    </form>

</div>