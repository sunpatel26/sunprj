<div id="EmployeeDocumentTable">
    <div class="row">
        <div class="col-lg-6">
            <h6 class="cards-title">
                Document List
            </h6>
        </div>
        <div class="col-lg-12 text-align-right">
            <a onclick="fnEmployeeDocument(0)"
