@model Business.Entities.ProductPhotoPath.ProductPhotoPath;

@{
    ViewData["Title"] = "Add Product Images and Description ";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
            <div class="card border-0 shadow rounded-3">
                <div class="card-body">
                    <div class="row ProductImageUpload border-bottom">
                        <div class="ps-3 col-md-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb mb-0 p-0">
                                    <li class="breadcrumb-item">
                                        <a asp-area="Admin" asp-controller="UploadProductImages" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a asp-area="Admin" asp-controller="UploadProductImages" asp-action="Index">Product Images and Description</a>
                                    </li>
                                    <li class="breadcrumb-item active">
                                        Add Product Images and Description
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    </div>

                    <div class="row">
                        <form method="post" asp-action="AddOrEditProductImages" asp-controller="UploadProductImages" asp-area="Admin" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
                            <div class="row">

                                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">

                                    <div class="row mb-3">
                                        <input type="hidden" asp-for="ProductImageID" />
                                        <label for="" class="col-sm-3 col-form-label text-end">UOM</label>
                                        <div class="col-sm-9">
                                            <select asp-for="UOMID" asp-items="ViewBag.UOMID" class="form-control">
                                                <option value="">Select Units</option>
                                            </select>
                                            <span asp-validation-for="UOMID" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label for="" class="col-sm-3 col-form-label text-end">Product Category</label>
                                        <div class="col-sm-9">
                                            <select asp-for="ItemCategoryID" asp-items="ViewBag.ItemCategory" class="form-control">
                                                <option value="">Select Category</option>
                                            </select>
                                            <span asp-validation-for="ItemCategoryID" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label for="" class="col-sm-3 col-form-label text-end">Product Name</label>
                                        <div class="col-sm-9">
                                            <input type="text" required="" class="form-control" id="ProductImageText" name="ProductImageText" asp-for="ProductImageText" placeholder="">
                                            <span asp-validation-for="ProductImageText" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label for="" class="col-sm-3 col-form-label text-end">Product Description</label>
                                        <div class="col-sm-9">
                                            <textarea required="" class="form-control" rows="4" id="Description" name="Description" asp-for="Description" placeholder=""></textarea> @*form="usrform"*@
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label for="" class="col-sm-3 col-form-label text-end">Product Status</label>
                                        <div class="col-sm-9">
                                            @Html.CheckBoxFor(s => s.IsActive)
                                        </div>
                                    </div>
                                </div>


                                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                    <div class="row mb-3">
                                        <label for="" class="col-sm-3 col-form-label text-end">Product Image:</label>
                                        <div class="col-sm-9">
                                            <input asp-for="ProductPhoto" type="file" class="form-control custom-file-input" accept="image/*" name="ProductPhoto" id="ProductPhoto" onchange="loadFile(event)" style="display: none;" />
                                            <label for="ProductPhoto" style="cursor: pointer; color:darkblue">
                                                Upload the image<br />
                                                <img id="output" width="150" height="150" src="@Model.ImagePath" />
                                            </label>
                                            <script>
                                                var loadFile = function(event) {
                                                    var image = document.getElementById('output');
                                                    image.src = URL.createObjectURL(event.target.files[0]);
                                                };
                                            </script>
                                        </div>
                                    </div>

                                </div>


                            </div>


                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <button type="submit" class="btn btn-primary btn-info px-5">Submit</button>
                                </div>
                            </div>



                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

